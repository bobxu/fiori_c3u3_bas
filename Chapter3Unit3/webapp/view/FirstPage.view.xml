<mvc:View controllerName="com.axyt.Chapter3Unit3.controller.FirstPage" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
                <Page title="{i18n>title}">
                    <content>
                        <Table noDataText="Drop column list items here and columns in the area above" id="table0" items="{path: '/People'}">
                            <items>
                                <ColumnListItem type="Active" id="item0">
                                    <cells>
                                        <Text text="{firstName}" id="text0"/></cells>
                                </ColumnListItem>
                            </items>
                            <columns>
                                <Column id="column0">
                                    <header>
                                        <Label text="名字" id="label0"/>
                                    </header>
                                </Column></columns></Table>
                        <Input width="50%" id="inputName"/>
                        <Button text="添加" width="100px" id="button0" icon="sap-icon://accept" press="buttonClick"/>
                    </content>
                </Page>
            </pages>
		</App>
	</Shell>
</mvc:View>
